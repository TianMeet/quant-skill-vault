generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Skill {
  id                      Int       @id @default(autoincrement())
  title                   String    @db.VarChar(200)
  slug                    String    @unique @db.VarChar(64)
  summary                 String    @db.Text
  inputs                  String    @db.Text
  outputs                 String    @db.Text
  steps                   Json      // string[]
  risks                   String    @db.Text
  triggers                Json      // string[]
  guardrails              Json      // { allowed_tools, disable_model_invocation, user_invocable, stop_conditions, escalation }
  tests                   Json      // { name, input, expected_output }[]
  tags                    SkillTag[]
  files                   SkillFile[]
  createdAt               DateTime  @default(now()) @map("created_at")
  updatedAt               DateTime  @updatedAt @map("updated_at")
  createdBy               String    @default("SYS") @map("created_by") @db.VarChar(150)
  updatedBy               String    @default("SYS") @map("updated_by") @db.VarChar(150)

  @@map("skills")
}

model Tag {
  id        Int       @id @default(autoincrement())
  name      String    @unique @db.VarChar(100)
  skills    SkillTag[]
  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime  @updatedAt @map("updated_at")
  createdBy String    @default("SYS") @map("created_by") @db.VarChar(150)
  updatedBy String    @default("SYS") @map("updated_by") @db.VarChar(150)

  @@map("tags")
}

model SkillFile {
  id           Int      @id @default(autoincrement())
  skillId      Int      @map("skill_id")
  path         String   @db.VarChar(500)
  mime         String   @db.VarChar(200)
  isBinary     Boolean  @default(false) @map("is_binary")
  contentText  String?  @map("content_text") @db.MediumText
  contentBytes Bytes?   @map("content_bytes") @db.MediumBlob
  skill        Skill    @relation(fields: [skillId], references: [id], onDelete: Cascade)
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")

  @@unique([skillId, path])
  @@map("skill_files")
}

model SkillTag {
  skillId Int   @map("skill_id")
  tagId   Int   @map("tag_id")
  skill   Skill @relation(fields: [skillId], references: [id], onDelete: Cascade)
  tag     Tag   @relation(fields: [tagId], references: [id], onDelete: Cascade)

  @@id([skillId, tagId])
  @@map("skill_tags")
}
